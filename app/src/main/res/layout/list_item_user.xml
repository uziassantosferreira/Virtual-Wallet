<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/imageView_picture"
        android:layout_width="@dimen/image_user"
        android:layout_height="@dimen/image_user"
        android:background="@color/colorAccent"
        android:contentDescription="@string/app_name"/>

    <TextView
        android:id="@+id/textView_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/app_name"
        android:layout_toRightOf="@id/imageView_picture"
        android:layout_toEndOf="@+id/imageView_picture"
        android:background="@color/colorAccent"
        android:layout_marginLeft="@dimen/padding_small"
        android:layout_marginStart="@dimen/padding_small"
        android:layout_marginBottom="@dimen/padding_small"
        android:contentDescription="@string/app_name"/>

    <TextView
        android:id="@+id/textView_phone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView_name"
        android:layout_alignLeft="@id/textView_name"
        android:layout_alignStart="@id/textView_name"
        android:text="@string/app_name"
        android:background="@color/colorAccent"
        android:contentDescription="@string/app_name"/>

</RelativeLayout>